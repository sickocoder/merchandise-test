{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@builders/*": [
        "builders/*"
      ],
      "@components/*": [
        "client/components/*"
      ],
      "@services/*": [
        "client/services/*"
      ],
      "@client/*": [
        "client/*"
      ],
      "@test-suite": [
        "client/test-suite/index.tsx"
      ],
      "@constants": [
        "constants/index.ts"
      ],
      "@types": [
        "types/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    ".next",
    ".vercel",
    "builders",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.hbs"
  ]
}
